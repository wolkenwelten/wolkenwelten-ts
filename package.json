{
    "name": "wolkenwelten-ts",
    "version": "0.0.1",
    "description": "An experiment with voxels",
    "author": "Benjamin Vincent Schulenburg <ben@wolkenwelten.net>",
    "license": "AGPL3",
    "type": "module",
    "scripts": {
        "build": "npm run asbuild:release && vite build",
        "asbuild:debug": "asc assembly/index.ts --target debug",
        "asbuild:release": "asc assembly/index.ts --target release",
        "asbuild": "npm run asbuild:release",
        "check": "npm run check:circular && npm run check:types && npm run check:assemblyscript",
        "check:circular": "madge --circular src/main.ts",
        "check:types": "tsc -p ./tsconfig.json --noEmit",
        "check:assemblyscript": "asc assembly/index.ts --noEmit",
        "dev": "npm run asbuild:release && vite",
        "preview": "npm run asbuild:release && vite preview",
        "pretty": "prettier --write \"src/**/*.{css,ts}\" \"assembly/**/*.ts\"",
        "optimize": "node scripts/optimizeAssets.js",
        "zip": "npm run build && zip -r ld-itch-compatible.zip dist/"
    },
    "devDependencies": {
        "@types/howler": "latest",
        "@types/node": "latest",
        "assemblyscript": "latest",
        "madge": "latest",
        "prettier": "latest",
        "typescript": "latest",
        "vite": "latest"
    },
    "dependencies": {
        "gl-matrix": "latest",
        "howler": "latest",
        "vox-reader": "latest"
    }
}
