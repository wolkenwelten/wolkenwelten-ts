{
    "name": "wolkenwelten-ts",
    "version": "0.0.1",
    "description": "An experiment with voxels",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "assemble": "npx -p wabt wat2wasm ./wasm/wolkenwelten-meshgen-wasm/main.wat -o ./wasm/wolkenwelten-meshgen-wasm/main.wasm",
        "build": "vite build",
        "preview": "vite preview",
        "pretty": "prettier --write \"src/**/*.ts\"",
        "typecheck": "tsc -p ./tsconfig.json --noEmit",
        "zip": "npm run build && zip -r ld-itch-compatible.zip dist/"
    },
    "author": "Benjamin Vincent Schulenburg <ben@wolkenwelten.net>",
    "license": "AGPL3",
    "devDependencies": {
        "@types/howler": "latest",
        "@types/node": "^18.11.18",
        "prettier": "latest",
        "typescript": "latest",
        "vite": "latest",
        "vite-plugin-top-level-await": "latest",
        "vite-plugin-wasm": "latest"
    },
    "dependencies": {
        "gl-matrix": "latest",
        "howler": "latest",
        "vox-reader": "latest"
    }
}
