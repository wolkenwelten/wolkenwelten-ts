{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2018",
        "module": "CommonJS",
        "sourceMap": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "skipLibCheck": true,
        "paths": {
            "react": ["./node_modules/preact/compat/"],
            "react-dom": ["./node_modules/preact/compat/"]
        },
        "noImplicitAny": true,
        "strict": true,
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        "types": []
    },
    "files": [
        "src/main.ts"
    ]
}
